{
  "name": "selective-extensions",
  "displayName": "Selective Extensions",
  "description": "Declare which extensions should be active per workspace, disabling everything else",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Ryan Spletzer",
  "publisher": "ryanspletzer",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryanspletzer/vscode-selective-extensions"
  },
  "homepage": "https://github.com/ryanspletzer/vscode-selective-extensions#readme",
  "bugs": {
    "url": "https://github.com/ryanspletzer/vscode-selective-extensions/issues"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "keywords": [
    "extensions",
    "workspace",
    "performance",
    "disable",
    "selective",
    "management",
    "allow-list"
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "selectiveExtensions.apply",
        "title": "Selective Extensions: Apply"
      },
      {
        "command": "selectiveExtensions.addExtension",
        "title": "Selective Extensions: Add Extension to Enable List"
      },
      {
        "command": "selectiveExtensions.removeExtension",
        "title": "Selective Extensions: Remove Extension from Enable List"
      },
      {
        "command": "selectiveExtensions.showList",
        "title": "Selective Extensions: Show Enable List"
      },
      {
        "command": "selectiveExtensions.importRecommendations",
        "title": "Selective Extensions: Import from Recommendations"
      }
    ],
    "configuration": {
      "title": "Selective Extensions",
      "properties": {
        "selectiveExtensions.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Controls whether the extension is active. When false, the extension takes no action on workspace open."
        },
        "selectiveExtensions.enabledExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Array of extension identifiers that should remain enabled. The final list is the union of all cascade levels."
        },
        "selectiveExtensions.autoApply": {
          "type": "boolean",
          "default": true,
          "description": "When true, automatically evaluates and triggers a relaunch on workspace open if extensions need to be disabled."
        },
        "selectiveExtensions.includeBuiltins": {
          "type": "boolean",
          "default": false,
          "description": "When true, built-in extensions shipped with VS Code are also subject to the enable list."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "bundle": "node esbuild.mjs",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src/",
    "package": "npm run bundle && npx @vscode/vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.3.2",
    "@types/vscode": "^1.95.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "mocha": "^10.8.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0"
  },
  "trustedDependencies": [
    "@vscode/vsce-sign"
  ]
}
